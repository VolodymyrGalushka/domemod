{
  "name": "domeviewer",
  "version": "0.1.0",
  "description": "An interactive dome projection visualisation tool.",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-js": "watchify ./js/domeviewer.js -o ./build/bundle.js -v",
    "build": "npm run build-js",
    "dev": "npm run build & npm run livereload",
    "livereload": "live-reload --port 9091 ./index.html"
  },
  "repository": {
    "type": "git",
    "url": "tbd"
  },
  "keywords": [
    "dome",
    "projection",
    "immersive",
    "media",
    "tool",
    "3d",
    "webgl",
    "visualisation"
  ],
  "author": "Dimitar Ruszev",
  "license": "ISC",
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^13.0.0",
    "browserify-fs": "^1.0.0",
    "glsl-random": "0.0.5",
    "glslify": "^5.0.2",
    "glslify-import": "^3.0.0",
    "live-reload": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "glslify"
    ]
  },
  "watchify": {
    "transform": [
      "glslify"
    ]
  },
  "glslify": {
    "transform": [
      "glslify-import"
    ]
  }
}
